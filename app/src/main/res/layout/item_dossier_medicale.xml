<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="?android:attr/selectableItemBackground">

    <!-- Table Layout to display all details horizontally -->
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="16dp"
        android:stretchColumns="1">

        <!-- Row displaying Name, Last Name, Blood Type, Phone Number -->
        <TableRow android:layout_height="wrap_content">

            <TextView
                android:id="@+id/nameTextView"
                android:layout_width="39dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:background="@drawable/table_border"
                android:paddingEnd="8dp"
                android:text="Blood Type:"
                android:textSize="16sp" /> <!-- Border applied -->

            <TextView
                android:id="@+id/nameValueTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/table_border"
                android:textSize="16sp" /> 

            <TextView
                android:id="@+id/lastnameTextView"
                android:layout_width="39dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:background="@drawable/table_border"
                android:paddingEnd="8dp"
                android:text="Blood Type:"
                android:textSize="16sp" /> <!-- Border applied -->

            <TextView
                android:id="@+id/lastnameValueTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="32dp"
                android:background="@drawable/table_border"
                android:textSize="16sp" /> <!-- Border applied -->

            <!-- Border applied -->

            <TextView
                android:id="@+id/bloodTypeTextView"
                android:layout_width="39dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:background="@drawable/table_border"
                android:paddingEnd="8dp"
                android:text="Blood Type:"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/bloodTypeValueTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="32dp"
                android:background="@drawable/table_border"
                android:textSize="16sp" /> <!-- Border applied -->

            <TextView
                android:id="@+id/phoneNumberTextView"
                android:layout_width="39dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:background="@drawable/table_border"
                android:paddingEnd="8dp"
                android:text="Blood Type:"
                android:textSize="16sp"/> <!-- Border applied -->

            <TextView
                android:id="@+id/maladieTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:background="@drawable/table_border"
                android:paddingEnd="8dp"
                android:text="Maladie:"
                android:textSize="16sp" /> <!-- Border applied -->

            <TextView
                android:id="@+id/maladieValueTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="32dp"
                android:background="@drawable/table_border"
                android:textSize="16sp" /> <!-- Border applied -->

            <TextView
                android:id="@+id/addTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:background="@drawable/table_border"
                android:paddingEnd="8dp"
                android:text="Add Info:"
                android:textSize="16sp" /> <!-- Border applied -->

            <TextView
                android:id="@+id/addValueTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/table_border"
                android:textSize="16sp" /> <!-- Border applied -->
        </TableRow>
    </TableLayout>

</LinearLayout>
