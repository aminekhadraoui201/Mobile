<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- TableLayout to Display the List of DossierMedicale -->
    <TableLayout
        android:id="@+id/tableLayoutDossier"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1"
        android:paddingTop="16dp">

        <!-- Header Row with column titles -->
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Full Name"
                android:textStyle="bold"
                android:paddingEnd="16dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hospital Name"
                android:textStyle="bold"
                android:paddingEnd="16dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date of Visit"
                android:textStyle="bold" />
        </TableRow>

        <!-- Dynamically filled rows for each DossierMedicale -->
        <!-- Example row -->
        <!-- You will add rows programmatically in your activity -->

    </TableLayout>

</LinearLayout>
